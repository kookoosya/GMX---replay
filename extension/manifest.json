{
  "manifest_version": 3,
  "name": "GMXReply",
  "version": "1.0.10",
  "description": "Inline GM/GN buttons on X + Best mode. Sync lists & session from gmxreply.com.",
  "action": {
    "default_title": "GMXReply",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.gmxreply.com/*",
    "https://gmxreply.com/*",
    "http://localhost:*/*",
    "http://127.0.0.1:*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.gmxreply.com/*",
        "https://gmxreply.com/*",
        "http://localhost:*/*",
        "http://127.0.0.1:*/*"
      ],
      "js": [
        "site_sync.js"
      ],
      "run_at": "document_idle"
    }
  ]
}

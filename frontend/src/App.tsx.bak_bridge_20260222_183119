import { useEffect, useState } from "react";

const LEGACY_PATH = "/app";

export default function App() {
  const [status, setStatus] = useState("loading");
  const [err, setErr] = useState("");

  useEffect(() => {
    let cancelled = false;

    fetch(LEGACY_PATH, { cache: "no-store" })
      .then((r) => {
        if (!r.ok) {
          throw new Error(String(r.status) + " " + String(r.statusText));
        }
        return r.text();
      })
      .then(() => {
        if (!cancelled) setStatus("ready");
      })
      .catch((e) => {
        if (!cancelled) {
          setStatus("error");
          setErr(String(e && e.message ? e.message : e));
        }
      });

    return () => {
      cancelled = true;
    };
  }, []);

  if (status === "error") {
    return (
      <div style={{ padding: 24, fontFamily: "system-ui, -apple-system, Segoe UI, Roboto, Arial" }}>
        <h2 style={{ margin: 0, marginBottom: 8 }}>Bridge UI: legacy не загрузился</h2>
        <div style={{ opacity: 0.85, marginBottom: 12 }}>Ошибка: {err}</div>
        <div style={{ opacity: 0.85, marginBottom: 16 }}>
          Проверь что backend поднят на <code>http://localhost:10000</code> и что <code>/app</code> доступен
        </div>
        <a href="http://localhost:10000/app" target="_blank" rel="noreferrer">
          Открыть legacy напрямую (10000/app)
        </a>
      </div>
    );
  }

  return (
    <div style={{ width: "100vw", height: "100vh", margin: 0 }}>
      <iframe
        src={LEGACY_PATH}
        title="GMXReply Legacy"
        style={{ width: "100%", height: "100%", border: 0, display: "block" }}
        onLoad={() => setStatus("ready")}
      />
      <div
        style={{
          position: "fixed",
          right: 12,
          bottom: 12,
          padding: "6px 10px",
          borderRadius: 10,
          background: "rgba(0,0,0,0.6)",
          color: "#fff",
          fontSize: 12,
          pointerEvents: "none",
        }}
      >
        {status === "ready" ? "Bridge: legacy loaded" : "Bridge: loading /app"}
      </div>
    </div>
  );
}

# GMXReply Backend - environment template

# Server
PORT=10000
NODE_ENV=development
TRUST_PROXY=1
DB_PATH=./data/db.sqlite

# CORS
# Comma-separated origins (prod): e.g. https://www.gmxreply.com,https://gmxreply.com
ALLOWED_ORIGINS=https://www.gmxreply.com,https://gmxreply.com

# Extension origin allowlist
# In production you MUST set this to your Chrome Web Store extension ID(s).
# (In dev, if EXTENSION_IDS is empty, any extension origin is allowed.)
EXTENSION_IDS=YOUR_EXTENSION_ID_HERE

# Optional: link used in UI to install the extension
EXTENSION_STORE_URL=

# Admin (server-side; never expose to frontend)
# If you enable admin endpoints, set these.
ADMIN_HANDLE=
ADMIN_PASSWORD=
# Secret header required for /api/admin/* endpoints
ADMIN_SECRET=
ADMIN_SESSION_HOURS=24

# Quotas / performance tuning
GMX_FREE_DAILY=70
GMX_SAVE_CAP_FREE=70
GMX_GEN_PER_MINUTE=90
GMX_BULK_CALLS_PER_MINUTE=30
GMX_GEN_COOLDOWN_MS=900
GMX_BULK_COOLDOWN_MS=2000
GMX_IP_COOLDOWN_MS=500
GMX_GEN_MIN_LATENCY_MS=250
GMX_MAX_CONCURRENT_GEN=2

# Billing / Solana
SOLANA_RPC=https://api.mainnet-beta.solana.com
SOLANA_RPC_PUBLIC=https://api.mainnet-beta.solana.com
SOL_RECEIVER=
SOL_USD_FALLBACK=150
# Optional override for stablecoin mints (defaults are in code)
USDC_MINT=
USDT_MINT=

# Build metadata (optional)
BUILD_ID=
RENDER_GIT_COMMIT=
DEFAULT_ADMIN_HANDLE=
